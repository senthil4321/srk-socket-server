{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WSL: Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/server", // Path to your compiled executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
